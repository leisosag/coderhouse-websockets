extends layout

block content
  .container.mt-5
  .row.d-flex.justify-content-center
    .col-md-10
      .d-flex.align-items-baseline.justify-content-between.mb-5
        h2 Productos
        a.btn.btn-primary.mt-3(href='/') Agregar productos
  .row.d-flex.justify-content-center
    .col-md-10
      if products.length > 0
        table.table
          tr
            th Nombre del producto
            th Precio
            th Im√°gen
          each product in products
            tr
              td=product.name
              td=product.price
              td.table-image
                img.img-thumbnail(src=product.thumbnail alt='image')
      else
        .alert.alert-danger
          p No hay productos
